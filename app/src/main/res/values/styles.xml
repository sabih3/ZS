<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

    </style>

    <style name="Theme.FullScreen" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="label_heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="label_heading_bold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="body_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="maroonishButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_maroon_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="greenButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_green_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tagStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#eeeff8</item>
        <item name="android:textColor">#5c66c1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

</resources>
