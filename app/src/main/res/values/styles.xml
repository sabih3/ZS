<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>

    </style>

    <style name="Theme.FullScreen" parent="@style/AppTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>

    </style>

    <style name="AlertDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:windowBackground">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
    </style>

    <style name="label_heading" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="label_heading_bold" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="label_heading_maroon" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/maroonish</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="label_heading_bold_maroon" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/maroonish</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="body_text_style" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="maroonishButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_maroon_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="greenButtonStyle" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/shape_green_btn</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="tagStyle" parent="TextAppearance.AppCompat">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:background">#eeeff8</item>
        <item name="android:textColor">#5c66c1</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>

    <style name="radioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/maroonish</item>
    </style>

    <style name="TextInputTheme" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/lightGrey</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="TextInputThemeProfile" parent="Theme.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/hintColor</item>
        <item name="android:textSize">15sp</item>
        <item name="android:paddingTop">7dp</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textStyle">bold</item>
        <item name="android:editTextBackground">@android:color/transparent</item>
        <item name="android:backgroundTint">@color/lightGrey</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
        <item name="colorAccent">@android:color/black</item>
        <item name="colorControlNormal">@android:color/black</item>
        <item name="colorControlActivated">@android:color/black</item>
    </style>

    <style name="genderDefault" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/lightGrey</item>
        <item name="android:textColor">@color/maroonish</item>

    </style>

    <style name="genderSelected" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/maroonish</item>
        <item name="android:textColor">@color/white</item>

    </style>
</resources>
